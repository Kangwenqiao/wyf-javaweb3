<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mw.education.dao.DeanMapper">

    <resultMap id="DeanResultMap" type="com.mw.education.domain.Dean">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="code" column="code"/>
        <result property="remark" column="remark"/>
    </resultMap>



    <select id="findAll" resultMap="DeanResultMap">
        SELECT * FROM dean
    </select>

    <select id="findById" resultMap="DeanResultMap">
        SELECT *
        FROM dean
        WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO dean (name, password, code, remark)
        VALUES (#{name}, #{password}, #{code}, #{remark})
    </insert>

    <update id="update">
        UPDATE dean
        SET name = #{name}, password = #{password}, code = #{code}, remark = #{remark}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM dean
        WHERE id = #{id}
    </delete>

</mapper>
