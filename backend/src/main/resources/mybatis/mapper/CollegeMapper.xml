<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mw.education.dao.CollegeMapper">

    <resultMap id="CollegeResultMap" type="com.mw.education.domain.College">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="CollegeResultMap">
        SELECT * FROM college WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="CollegeResultMap">
        SELECT * FROM college
    </select>

    <insert id="insert">
        INSERT INTO college (name, remark)
        VALUES (#{name}, #{remark})
    </insert>

    <update id="updateByPrimaryKey">
        UPDATE college
        SET name = #{name}, remark = #{remark}
        WHERE id = #{id}
    </update>

    <delete id="deleteByPrimaryKey">
        DELETE FROM college WHERE id = #{id}
    </delete>
</mapper>
